<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/missionImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@mipmap/ic_launcher"
        android:layout_width="52dp"
        android:layout_height="52dp"/>

    <TextView
        android:id="@+id/missionNameText"
        app:layout_constraintTop_toTopOf="@id/missionImage"
        app:layout_constraintStart_toEndOf="@id/missionImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="Mission Serenity"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/missionDateText"
        app:layout_constraintTop_toBottomOf="@id/missionNameText"
        app:layout_constraintStart_toEndOf="@id/missionImage"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/missionImage"
        tools:text="March 14, 2018"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>